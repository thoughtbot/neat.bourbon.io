doctype html
html lang="en"
  head
    meta charset="utf-8"
    meta(name="viewport"
         content="width=device-width, initial-scale=1, shrink-to-fit=no")
    meta name="description" content=page_description
    title=page_title
    - if content_for?(:preferred_path)
      link rel="canonical" href=preferred_url
    = inline_stylesheet :main
  body class= "page-#{page_classes}"
    = partial "partials/site_nav"
    main role="main"
      = yield
    = partial "partials/site_footer"
    = partial "partials/analytics"
    = javascript_include_tag "https://code.jquery.com/jquery-3.1.0.min.js"
    = javascript_include_tag "https://cdn.jsdelivr.net/lodash/4.14.1/lodash.min.js"
    = javascript_include_tag :main
